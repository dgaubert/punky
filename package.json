{
  "name": "node-api-bootstrap",
  "version": "1.0.0",
  "description": "Bootstrap your APIs taking advantage of Node.js, Express.js, ES6 and so on.",
  "main": "index.js",
  "engines": {
    "node": "4.2.4"
  },
  "directories": {
    "test": "test"
  },
  "scripts": {
    "lint": "node_modules/.bin/standard index.js source/**/*.js test/**/*.js script/**/*.js",
    "pretest": "npm run lint",
    "test": "node_modules/.bin/mocha -r should -r scripts/test-bootstrap test/**/*-test.js",
    "test:watch": "npm run test -- -w",
    "coverage": "node_modules/.bin/istanbul cover node_modules/.bin/_mocha test/**/*-test.js -- -r scripts/test-bootstrap.js -r should",
    "start": "node ."
  },
  "keywords": [],
  "author": "Daniel Garc√≠a Aubert <@dgaubert>",
  "license": "MIT",
  "dependencies": {
    "express": "4.13.4",
    "winston": "2.1.1"
  },
  "devDependencies": {
    "istanbul": "0.4.2",
    "standard": "6.0.1",
    "mocha": "2.4.5",
    "should": "8.0.2",
    "sinon": "1.17.3"
  },
  "standard": {
    "globals": [
      "__source",
      "describe",
      "it",
      "before",
      "beforeEach",
      "after",
      "afterEach"
    ]
  }
}
